{
    "manifest_version": 2,
    "name": "Better History",
    "version": "1.0",
    "description": "Enhanced browser history tracking with IndexedDB storage",
    "permissions": [
        "webNavigation",
        "storage",
        "<all_urls>",
        "tabs"
    ],
    "background": {
        "scripts": [
            "db.js",
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Better History",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon.png",
        "96": "icon.png"
    }
}